<script src="../../public/jquery-3.6.3.min.js"></script>
<body>
    <label> Username :</label><input id="username"><br>
    <label> Password :</label><input id="password"><br>
    <button onClick = "login()" class="btn btn-dark">Login</button>
</body>
<script>
    function login(){
        $.ajax({
            url :'/login',
            type : "POST",
            data :{
                username :$('#username').val(),
                password :$('#password').val()
            }
        }).then(data =>{
            Cookie.set('token',data.token);

        }).catch(error =>{
            console.log(error);
        })
    }
</script>
